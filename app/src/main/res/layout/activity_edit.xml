<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout layout_height="match_parent"
                  android:id="@+id/root_view"
                  android:orientation="vertical"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent" android:layout_height="wrap_content">
        <GridLayout
            android:layout_marginTop="10dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/GridLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:padding="10dp"
                android:id="@+id/btn_edit_walk"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:src="@drawable/pejalan"
                android:text="PEJALAN KAKI"/>

            <ImageView
                android:padding="10dp"
                android:src="@drawable/bermotor"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/btn_edit_motor"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:text="KENDARAAN BERMOTOR"/>

            <ImageView
                android:padding="10dp"
                android:src="@drawable/interchange"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/btn_add_interchange"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:text="TAMBAH INTERCHANGE"/>

            <!--<Button-->
            <!--android:id="@+id/btn_edit_car"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="MOBIL"/>-->
        </GridLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <Button
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:textColor="@android:color/white"
                    android:id="@+id/btn_import_points"
                    android:text="Import Points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:textColor="@android:color/white"
                    android:id="@+id/btn_import_paths"
                    android:text="Import Paths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:textColor="@android:color/white"
                    android:id="@+id/btn_import_interchanges"
                    android:text="Import Interchanges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:id="@+id/btn_export"
                android:text="Export"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

