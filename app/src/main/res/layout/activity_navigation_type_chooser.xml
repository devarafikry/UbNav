<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    android:layout_weight="1"
    android:orientation="horizontal" >

    <ImageView
        android:padding="10dp"
        android:id="@+id/btn_nav_walk"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:src="@drawable/nav_pejalan"
        android:text="PEJALAN KAKI"/>

    <ImageView
        android:padding="10dp"
        android:src="@drawable/nav_bermotor"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/btn_nav_motor"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:text="KENDARAAN BERMOTOR"/>

    <ImageView
        android:padding="10dp"
        android:src="@drawable/nav_interchange"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/btn_nav_interchange"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:text="KENDARAAN BERMOTOR DAN INTERCHANGE"/>

    <!--<Button-->
    <!--android:id="@+id/btn_edit_car"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="MOBIL"/>-->
</GridLayout>


