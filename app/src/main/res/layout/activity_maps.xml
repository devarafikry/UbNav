<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:id="@+id/root_map"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="#efefef"
                                                 >

    <fragment
              android:id="@+id/map"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="devfikr.skripsi.ubnav.ui.activity.MapsActivity"/>

    <com.lapism.searchview.SearchView
        android:visibility="gone"
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.lapism.searchview.SearchBehavior"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:id="@+id/nav_interchange_panel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.design.widget.FloatingActionButton
        android:layout_gravity="right"
        android:src="@drawable/motor"
        android:visibility="visible"
        app:backgroundTint="@drawable/fab_focused"
        android:id="@+id/fab_motor"
        android:onClick="activeMotor"
        android:layout_margin="10dp"
        android:layout_width="@dimen/floating_button_size"
        android:layout_height="@dimen/floating_button_size"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_gravity="right"
            android:src="@drawable/car"
            android:visibility="visible"
            app:backgroundTint="@drawable/fab_focused"
            android:id="@+id/fab_car"
            android:onClick="activeCar"
            android:layout_margin="10dp"
            android:layout_width="@dimen/floating_button_size"
            android:layout_height="@dimen/floating_button_size"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit_panel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.FloatingActionButton
            android:layout_gravity="right"
            android:src="@drawable/ic_undo"
            android:visibility="visible"
            app:backgroundTint="@color/colorPrimary"
            android:id="@+id/fab_undo"
            android:onClick="undoPath"
            android:layout_margin="10dp"
            android:layout_width="@dimen/floating_button_size"
            android:layout_height="@dimen/floating_button_size"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_gravity="right"
            android:src="@drawable/ic_redo"
            android:visibility="visible"
            app:backgroundTint="@color/colorPrimary"
            android:id="@+id/fab_redo"
            android:onClick="redoPath"
            android:layout_margin="10dp"
            android:layout_width="@dimen/floating_button_size"
            android:layout_height="@dimen/floating_button_size"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_gravity="right"
            android:src="@drawable/ic_unite"
            android:visibility="visible"
            app:backgroundTint="@drawable/fab_focused"
            android:id="@+id/fab_join_node"
            android:onClick="joinNode"
            android:layout_margin="10dp"
            android:layout_width="@dimen/floating_button_size"
            android:layout_height="@dimen/floating_button_size"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_gravity="right"
            android:src="@drawable/ic_marker"
            android:visibility="visible"
            app:backgroundTint="@drawable/fab_focused"
            android:id="@+id/fab_add_marker"
            android:onClick="addMarker"
            android:layout_margin="10dp"
            android:layout_width="@dimen/floating_button_size"
            android:layout_height="@dimen/floating_button_size"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_gravity="right"
            android:src="@drawable/ic_clear"
            android:visibility="visible"
            app:backgroundTint="@android:color/holo_red_dark"
            android:id="@+id/fab_clear"
            android:onClick="deletePoint"
            android:layout_margin="10dp"
            android:layout_width="@dimen/floating_button_size"
            android:layout_height="@dimen/floating_button_size"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_gravity="right"
            android:src="@drawable/ic_reset"
            android:visibility="visible"
            app:backgroundTint="@android:color/holo_red_dark"
            android:id="@+id/fab_reset"
            android:onClick="resetPath"
            android:layout_margin="10dp"
            android:layout_width="@dimen/floating_button_size"
            android:layout_height="@dimen/floating_button_size"/>
    </LinearLayout>

    <Button
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorAccent"
        android:visibility="gone"
        android:id="@+id/btn_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="finishEditor"
        android:text="Finish"
        android:layout_gravity="right"/>
    <include
        layout="@layout/bottom_sheet" />
</android.support.design.widget.CoordinatorLayout>