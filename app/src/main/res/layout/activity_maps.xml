<FrameLayout
    android:id="@+id/root_map"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <fragment
              android:id="@+id/map"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="devfikr.skripsi.ubnav.MapsActivity"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<android.support.design.widget.FloatingActionButton-->
            <!--android:src="@drawable/ic_save_white"-->
            <!--android:id="@+id/fab_save"-->
            <!--app:backgroundTint="@android:color/holo_red_light"-->
            <!--android:onClick="exitWatchPath"-->
            <!--android:visibility="visible"-->
            <!--android:layout_margin="10dp"-->
            <!--android:layout_width="@dimen/floating_button_size"-->
            <!--android:layout_height="@dimen/floating_button_size"/>-->
        <android.support.design.widget.FloatingActionButton
            android:layout_gravity="right"
            android:src="@drawable/ic_undo"
            android:visibility="visible"
            app:backgroundTint="@color/colorPrimary"
            android:id="@+id/fab_undo"
            android:onClick="undoPath"
            android:layout_margin="10dp"
            android:layout_width="@dimen/floating_button_size"
            android:layout_height="@dimen/floating_button_size"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_gravity="right"
            android:src="@drawable/ic_redo"
            android:visibility="visible"
            app:backgroundTint="@color/colorPrimary"
            android:id="@+id/fab_redo"
            android:onClick="redoPath"
            android:layout_margin="10dp"
            android:layout_width="@dimen/floating_button_size"
            android:layout_height="@dimen/floating_button_size"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_gravity="right"
            android:src="@drawable/ic_insert_node"
            android:visibility="visible"
            app:backgroundTint="@color/colorPrimary"
            android:id="@+id/fab_edit_status"
            android:onClick="addPointBetweenPath"
            android:layout_margin="10dp"
            android:layout_width="@dimen/floating_button_size"
            android:layout_height="@dimen/floating_button_size"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_gravity="right"
            android:src="@drawable/ic_clear"
            android:visibility="visible"
            app:backgroundTint="@android:color/holo_red_dark"
            android:id="@+id/fab_clear"
            android:onClick="deletePoint"
            android:layout_margin="10dp"
            android:layout_width="@dimen/floating_button_size"
            android:layout_height="@dimen/floating_button_size"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_gravity="right"
            android:src="@drawable/ic_reset"
            android:visibility="visible"
            app:backgroundTint="@android:color/holo_red_dark"
            android:id="@+id/fab_reset"
            android:onClick="resetPath"
            android:layout_margin="10dp"
            android:layout_width="@dimen/floating_button_size"
            android:layout_height="@dimen/floating_button_size"/>
    </LinearLayout>

    <Button
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorAccent"
        android:visibility="gone"
        android:id="@+id/btn_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="finishEditor"
        android:text="Finish"
        android:layout_gravity="right"/>

</FrameLayout>